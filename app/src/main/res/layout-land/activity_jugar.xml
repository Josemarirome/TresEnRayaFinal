<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="Usuario: " />

            <TextView
                android:id="@+id/txUsuario"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="usuario"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="3 EN RAYA"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <RadioGroup
            android:id="@+id/grupoDificultad"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center_vertical|center"
            android:gravity="center|center_vertical">

            <RadioButton
                android:id="@+id/facil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FÃ¡cil" />

            <RadioButton
                android:id="@+id/normal"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:text="Normal" />

            <RadioButton
                android:id="@+id/imposible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Imposible" />
        </RadioGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <Button
            android:id="@+id/unjugador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Jugar"
            android:text="1 JUGADOR" />

        <Button
            android:id="@+id/dosjugadores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Jugar"
            android:text="2 JUGADORES" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <Button
            android:id="@+id/btMute"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:onClick="mute"
            android:text="Mute sound" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="294dp"
            android:layout_height="0dp"
            android:layout_marginTop="59dp"
            android:layout_marginBottom="7dp"
            android:useDefaultMargins="true"
            app:layout_constraintBottom_toTopOf="@+id/btPuntuaciones"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/a1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toqueCasilla"
                android:src="@drawable/casilla" />

            <ImageView
                android:id="@+id/a2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toqueCasilla"
                android:src="@drawable/casilla" />

            <ImageView
                android:id="@+id/a3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toqueCasilla"
                android:src="@drawable/casilla" />

            <ImageView
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="toqueCasilla"
                android:src="@drawable/casilla" />

            <ImageView
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toqueCasilla"
                android:src="@drawable/casilla" />

            <ImageView
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toqueCasilla"
                android:src="@drawable/casilla" />

            <ImageView
                android:id="@+id/c1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:onClick="toqueCasilla"
                android:src="@drawable/casilla" />

            <ImageView
                android:id="@+id/c2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toqueCasilla"
                android:src="@drawable/casilla" />

            <ImageView
                android:id="@+id/c3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:onClick="toqueCasilla"
                android:src="@drawable/casilla" />
        </GridLayout>

        <Button
            android:id="@+id/btPuntuaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:onClick="verPuntuaciones"
            android:text="Puntuaciones"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>